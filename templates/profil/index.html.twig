{% extends 'base.html.twig' %}
{% block title %}Profil

{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">

		{% if app.user and app.user.isVerified == false %}
			<div class="alert alert-warning alert-dissmissible padd100top" role="alert">
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				<div class="alert-message">
					<p>Votre compte n'est pas encore activé, veuillez verifier votre boîte mail</p>
					<p>Si vous ne l'avez pas reçu,
						<a href="{{ path('app_verify_email') }}">cliquez sur ce lien</a>
					</p>
				</div>
			</div>
		{% endif %}

		{% if app.user %}
			<div class="mt-5 mb-5 text-center uppercase">
				<div>
					<p>Bonjour
						{{ app.user.firstname }}, bienvenue sur votre espace personnel !</p>
				</div>
			</div>
			<a href="/profil/depense/ajout" class="group block max-w-xs mx-auto rounded-lg p-6 bg-white ring-1 ring-slate-900/5 shadow-lg space-y-3 hover:bg-indigo-500 hover:ring-indigo-500">
				<div class="flex items-center space-x-3">
					<svg class="h-6 w-6 stroke-sky-500 group-hover:stroke-white" fill="none" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19H6.931A1.922 1.922 0 015 17.087V8h12.069C18.135 8 19 8.857 19 9.913V11"></path>
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 7.64L13.042 6c-.36-.616-1.053-1-1.806-1H7.057C5.921 5 5 5.86 5 6.92V11M17 15v4M19 17h-4"></path>
					</svg>
					<h3 class="text-slate-900 group-hover:text-white text-sm font-semibold">Ajouter une nouvelle dépense</h3>
				</div>
				<p class="text-slate-500 group-hover:text-white text-sm">Ajouter une dépense à votre compte</p>
			</a>

			{% for userdepense in userdepenses %}

            {{ userdepense.montant}}
           
        {% endfor %}
		{% endif %}


		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}

			{{ dump() }}


	</div>


{% endblock %}
